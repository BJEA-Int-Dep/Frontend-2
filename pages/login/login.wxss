.container {
  min-height: calc(100vh - 180rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 0 40rpx 0;
  background-color: #F6F6F6;
  position: relative;
}

.custom-header {
  width: 100vw;
  min-width: 100vw;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-top: calc(env(safe-area-inset-top) + 44px);
  padding-bottom: 36rpx;
  background: #fff;
  box-sizing: border-box;
  /* position: sticky; 改为固定或删除 */
  position: fixed;
  top: 0;
  z-index: 10;
}

.header-left, .header-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #222;
  text-align: center;
  line-height: 1.2;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.login-form {
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-group {
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx 36rpx 8rpx 36rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.input {
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 34rpx;
  color: #333;
  border: none;
  background: transparent;
  padding: 0;
  box-sizing: border-box;
}

.login-btn {
  width: 100%;
  margin-top: 60rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #1AAD19;
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(34,197,94,0.15);
  border: none;
}

/* 替代 :active 写法 */
.login-btn.active {
  background: #179B16;
}

.register-link {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  z-index: 100;
  padding: calc(env(safe-area-inset-bottom) + 40rpx) 0;
}

.register-text {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 替代 gap */
.register-text > view {
  margin-right: 20rpx;
}
.register-text > view:last-child {
  margin-right: 0;
}

.register-prompt {
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #1AAD19;
  font-size: 28rpx;
  font-weight: bold;
}

.identity-tabs {
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 0 auto 40rpx auto;
  background: #f2f2f2;
  border-radius: 44rpx;
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 32rpx;
  color: #888;
  background: #f2f2f2;
}

.tab.active {
  color: #1AAD19;
  background: #fff;
  font-weight: bold;
}