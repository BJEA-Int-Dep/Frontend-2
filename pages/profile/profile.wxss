/* pages/profile/profile.wxss */
/* 自定义页眉 */
.custom-header {
  width: 100vw;
  min-width: 100vw;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-top: calc(env(safe-area-inset-top) + 44px);
  padding-bottom: 36rpx;
  background: #fff;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  position: sticky;
  top: 0;
  z-index: 10;
}
.header-left, .header-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #222;
  text-align: center;
  line-height: 1.2;
}

.profile-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 32rpx 0 32rpx;
}
.profile-card {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 24rpx 40rpx 24rpx;
  margin-bottom: 48rpx;
}
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 32rpx;
  background: #eee;
}
.name {
  font-size: 40rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 16rpx;
}
.info {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.logout-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(90deg, #ff4d4f 60%, #ff7875 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  margin-top: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255,77,79,0.10);
  border: none;
}
.logout-btn:active {
  background: linear-gradient(90deg, #d9363e 60%, #ff4d4f 100%);
}