/* pages/alumniDetail/alumniDetail.wxss */
/* 自定义页眉 */
.custom-header {
  width: 100vw;
  min-width: 100vw;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-top: calc(env(safe-area-inset-top) + 44px);
  padding-bottom: 36rpx;
  background: #fff;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  position: sticky;
  top: 0;
  z-index: 10;
}
.header-left, .header-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #222;
  text-align: center;
  line-height: 1.2;
}
.back-icon {
  width: 56rpx;
  height: 56rpx;
}

.alumni-detail {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 32rpx 0 32rpx;
}
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 32rpx;
  background: #eee;
}
.name {
  font-size: 40rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 12rpx;
}
.info {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.job {
  font-size: 28rpx;
  color: #1aad19;
  margin-bottom: 32rpx;
}
.desc-block {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  padding: 32rpx 24rpx;
  margin-top: 16rpx;
}
.desc-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 16rpx;
  display: block;
}
.desc {
  font-size: 28rpx;
  color: #444;
  line-height: 1.8;
}