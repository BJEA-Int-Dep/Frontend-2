/* pages/alumniList/alumniList.wxss */
/* 自定义页眉 */
.custom-header {
  width: 100vw;
  min-width: 100vw;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-top: calc(env(safe-area-inset-top) + 44px);
  padding-bottom: 36rpx;
  background: #fff;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-left, .header-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #222;
  text-align: center;
  line-height: 1.2;
}

/* 校友列表整体容器 */
.alumni-list {
  padding: 16rpx 0 32rpx 0; /* 顶部padding让内容不贴header */
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 单个校友卡片 */
.alumni-item {
  width: 90%;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 24rpx 20rpx;
}

/* 校友头像样式 */
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: #eee;
}

/* 校友信息区域 */
.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 校友姓名样式 */
.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 8rpx;
}

/* 校友简介样式 */
.desc {
  font-size: 26rpx;
  color: #666;
}